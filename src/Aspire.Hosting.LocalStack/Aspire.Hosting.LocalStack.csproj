<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCurrent)</TargetFramework>
    <IsPackable>true</IsPackable>
    <PackageTags>aspire hosting localstack</PackageTags>
    <Description>LocalStack support for .NET Aspire.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SharedDir)VolumeNameGenerator.cs" Link="Utils\VolumeNameGenerator.cs" />
    <Compile Include="$(SharedDir)ConfigurationExtensions.cs" Link="Utils\ConfigurationExtensions.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspire.Hosting.Dependencies\Aspire.Hosting.Dependencies.csproj" />
  </ItemGroup>

</Project>
