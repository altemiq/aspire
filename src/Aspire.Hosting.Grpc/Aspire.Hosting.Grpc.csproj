<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCurrent)</TargetFramework>
    <PackageTags>aspire hosting grpc</PackageTags>
    <Description>gRPC support for .NET Aspire.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Altemiq.Runtime" />
    <PackageReference Include="Aspire.Hosting" />
    <PackageReference Include="Grpc.HealthCheck" />
    <PackageReference Include="Tool.Grpc.UI" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SharedDir)OverloadResolutionPriorityAttribute.cs" Link="Utils\OverloadResolutionPriorityAttribute.cs" />
  </ItemGroup>

</Project>
